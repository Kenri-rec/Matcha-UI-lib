-- Simple UI Library
local UILib = {}

function UILib.new(name)
    local self = {}
    self.name = name
    return setmetatable(self, {__index = UILib})
end

function UILib:Tab(name)
    return name
end

function UILib:Section(tab, name)
    return name
end

function UILib:Checkbox(tab, section, label, default, callback)
    if callback then callback(default) end
end

return UILib
